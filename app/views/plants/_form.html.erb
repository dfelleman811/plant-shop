<%= form_with model: plant do |form| %>

<div class="form-group">
    <%= form.label :common_name, class: "form-label" %>
    <%= form.text_field :common_name, class: "form-control" %>
</div>

<div class="form-group">
    <%= form.label :scientific_name, class: "form-label" %>
    <%= form.text_field :scientific_name, class: "form-control" %>
</div>

<div class="form-group">
    <%= form.label :image_url, class: "form-label" %>
    <%= form.url_field :image_url, class: "form-control" %>
</div>

<div class="form-group">
    <%= form.label :price, class: "form-label" %>
    <%= form.number_field :price, step: 0.01, class: "form-control" %>
</div>

<div class="form-group">
    <%= form.label :quantity, class: "form-label" %>
    <%= form.number_field :quantity, in: 1.0..100, step: 1, class: "form-control" %>
</div>

<% if request.fullpath.include? "new" %>
    <div class="form-group">
        <%= form.submit "Add to inventory", class: "btn btn-warning form-control" %>
    </div>
<% else %>
    <div class="form-group">
        <%= form.submit "Update inventory item", class: "btn btn-warning form-control" %>
    </div>

<% end %>


<% end %>
