<div class="container">
    <h1>Plants!</h1>


    <div class="flex-container">
    <% @plants.each do |plant| %>

    <div class="card">
        <%= image_tag "plant-logo", alt: "plant-image", class: "card-img-top" %>
        <div class="card-body">
            <h4 class="card-title"><%= plant.common_name %></h4>
            <p class="card-text"><%= plant.scientific_name %></p>
            <p class="card-text"><%= plant.price %></p>
            <%= button_to "Add to cart", cart_details_path(:plant_id => plant.id), method: :post, class: "btn btn-warning" %>
        </div>
    </div>


    <% end %>
    </div>
</div>