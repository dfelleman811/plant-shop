<div class="container" style="width:100%;">
  <%- if controller_name != 'sessions' %>

  <div class="m-3 mx-auto col-6 d-flex justify-content-center">
    <%= link_to "Back to log in", new_user_session_path, class: "btn btn-sm btn-warning" %><br />
  </div>
  <% end %>

  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <div class="m-3 d-flex justify-content-center">
    <%= link_to "Register", new_user_registration_path, class: "btn btn-sm btn-warning" %><br />
  <% end %>
  </div>

  <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <div class="m-3 d-flex justify-content-center">
    <%= link_to "Forgot your password?", new_user_password_path, class: "btn btn-sm btn-danger" %><br />
  <% end %>
  </div>

  <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
    <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path %><br />
  <% end %>

  <%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
    <%= link_to "Didn't receive unlock instructions?", new_unlock_path%><br />
  <% end %>

  <%- if devise_mapping.omniauthable? %>
    <%- resource_class.omniauth_providers.each do |provider| %>
      <%= button_to "Sign in with #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), data: { turbo: false } %><br />
    <% end %>
  <% end %>
</div>